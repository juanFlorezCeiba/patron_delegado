<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".vista.agregarPelicula.DialogoAgregarPelicula">

    <TextView
            android:text="Agregar Pelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="20sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="64dp" android:layout_marginEnd="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:padding="16dp" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        >

            <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_agregar_eplicula"
            />
            <EditText android:layout_width="200dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:id="@+id/txt_titulo_agregar_pelicula"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/anio_agregar_pelicula"
            />
            <EditText android:layout_width="200dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:id="@+id/txt_anio_agregar_pelicula"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_boton_main_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/boton_agregar_persona_dialogo"/>


</android.support.constraint.ConstraintLayout>